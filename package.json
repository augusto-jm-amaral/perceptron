{
  "name": "perceptron",
  "author": "",
  "version": "1.0.0",
  "description": "Build your mind.",
  "license": "MIT",
  "main": "dist/perceptron.js",
  "scripts": {
    "build": "WEBPACK_ENV=build webpack",
    "dev": "esw -w ./src/index.js",
    "lint": "eslint ./src/index.js",
    "test": "ava --verbose ./test/*.test.js"
  },
  "keywords": [
    "perceptron",
    "pmc",
    "machine learning",
    "neural networks"
  ],
  "devDependencies": {
    "ava": "0.23.0",
    "babel": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint-loader": "^1.9.0",
    "webpack": "^3.8.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "eslint": "^4.11.0",
    "eslint-watch": "^3.1.3"
  },
  "ava": {
    "babel": {
      "presets": [
        "es2015",
        "@ava/stage-4"
      ]
    },
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "@ava/stage-4"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "plugins": []
  }
}
